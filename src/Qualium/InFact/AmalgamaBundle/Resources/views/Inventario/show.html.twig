        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_inventario') }}">
            Regresar a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('admin_inventario_edit', { 'id': entity.id }) }}">
